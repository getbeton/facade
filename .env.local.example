# Webflow CMS Image Generator - Environment Variables

# The Webflow site ID where collections are located
# You can find this in your Webflow site settings
WEBFLOW_SITE_ID=your_site_id_here

# Platform API Keys (for paid tier users)
PLATFORM_WEBFLOW_API_KEY=your_platform_webflow_key
PLATFORM_OPENAI_API_KEY=your_platform_openai_key

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_key_here

# Encryption (for user API keys - 64 hex characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate_with_above_command

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
